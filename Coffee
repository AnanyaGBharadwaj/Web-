</style>
<script>
function computeCost() {
  // Get quantities (if empty, default to 0)
  let qFrench = parseInt(document.getElementById("French").value) || 0;
  let qHazelnut = parseInt(document.getElementById("Hazelnut").value) || 0;
  let qColombian = parseInt(document.getElementById("Colombian").value) || 0;

  // Prices
  let pFrench = 3.49;
  let pHazelnut = 4.59;
  let pColombian = 3.49;

  // Compute total
  let total = (qFrench * pFrench) + (qHazelnut * pHazelnut) + (qColombian * pColombian);

  // Display result in cost box
  document.getElementById("cost").value = "$" + total.toFixed(2);
}
</script>
</head>
<body>
